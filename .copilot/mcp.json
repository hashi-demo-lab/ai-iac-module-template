{
  "mcpServers": {
    "terraform-mcp-server": {
      "type": "local",
      "command": "docker",
      "tools": [
        "*"
      ],
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "TFE_TOKEN",
        "hashicorp/terraform-mcp-server:0.4.0"
      ],
      "env": {
        "TFE_TOKEN": "${TFE_TOKEN}"
      }
    },
    "aws-knowledge-mcp": {
      "type": "http",
      "url": "https://knowledge-mcp.global.api.aws",
      "headers": {},
      "tools": [
        "*"
      ]
    }
  }
}